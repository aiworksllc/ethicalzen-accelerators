FROM node:20-alpine

WORKDIR /app

COPY package*.json ./
COPY sdk/ ./sdk/

WORKDIR /app/sdk
RUN npm ci
RUN npm run build
RUN npm link

WORKDIR /app/accelerator
COPY accelerators-internal/ecommerce-support-chatbot/package*.json ./
RUN npm install
RUN npm link @ethicalzen/sdk

COPY accelerators-internal/ecommerce-support-chatbot/ ./

EXPOSE 3000

CMD ["node", "app/server-sdk.js"]

